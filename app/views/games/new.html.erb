<h1>New game</h1>

<div class="game">
  <div class="letters">
    <% @letters.each do |letter| %>
      <p><%= letter %></p>
    <% end %>
  </div>

  <form method='POST' action="/score">
    <input type="hidden" name="letters" value="<%= @letters %>">
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <div class="form-group">
      <label for="word">What is the longest word you can find?</label>
      <div class="input-group">
        <input type="text" id='word' name='word' class='form-control'>
        <input type="submit" class='btn btn-primary' value="Let's go!">
      </div>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  <%= link_to 'reset score', reset_score_path %>
</div>
